                                    }
                                }
                            }
                        }
                    }
                },
                "security": [{}]
            },
            "post": {
                "description": "Router responsible for register products.",
                "tags": ["Router without parameter"],
                "requestBody": {   
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateProduct"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref": "#/components/schemas/readProduct"
                                },
                                "examples": {
                                    "product": {
                                        "value": {
                                            "id": 1,
                                            "name": "Coffeo",
                                            "price": 2.00,
                                            "weight": 100,
                                            "calories": 21,
                                            "section": "food",
                                            "expirationDate": "02/09/2024"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "conflictError": {
                                        "value": {
                                            "message": "Product already registered"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [{}]
            }
        },
        "/products/:id": {
            "get": {
                "description": "The router resposible searching just product information.",
                "tags": ["Router with parameter"],
                "parameters": [{
                    "schema": {
                        "type": "number"
                    },
                    "in": "query",
                    "description": "The Id product you want to search.",
                    "name": "id"
                }],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/readProduct"
                                },
                                "examples": {
                                    "response": {
                                        "value": {
                                            "id": 1,
                                            "name": "Coffeo",
                                            "price": 2.00,
                                            "weight": 100,
                                            "calories": 21,
                                            "section": "food",
                                            "expirationDate": "02/09/2024"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "notFoundError": {
                                        "value": {
                                            "message": "Not found product."
                                        }
                                    }
                                }
                            }
                        }
                    }
                    
                },
                "security": [{}]
            },
            "patch": {
                "description": "The router resposible update just product information.",
                "tags": ["Router with parameter"],
                "parameters": [{
                    "schema": {
                        "type": "number"
                    },
                    "in": "query",
                    "description": "The Id product you want to search.",
                    "name": "id"
                }],
                "requestBody": {   
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/updateProduct"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successfully update product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/updateProduct"
                                },
                                "examples": {
                                    "response": {
                                        "value": {
                                            "id": 1,
                                            "name": "Coffeo",
                                            "price": 2.00,
                                            "weight": 100,
                                            "calories": 21,
                                            "section": "food",
                                            "expirationDate": "02/09/2024"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "conflictError": {
                                        "value": {
                                            "message": "Product already registered"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "notFoundError": {
                                        "value": {
                                            "message": "Not found product."
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [{}]
            },
            "delete": {
                "description": "The router resposible delete just product information.",
                "tags": ["Router with parameter"],
                "parameters": [{
                    "schema": {
                        "type": "number"
                    },
                    "in": "query",
                    "description": "The Id product you want to search.",
                    "name": "id"
                }],
                "responses": {
                    "204": {
                        "description": "No body content"
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "notFoundError": {
                                        "value": {
                                            "message": "Not found product."
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [{}]
            }
        }
    },
