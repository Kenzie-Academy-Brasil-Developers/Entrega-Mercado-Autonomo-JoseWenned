                    },
                    "weight": {
                        "type": "number"
                    },
                    "calories": {
                        "type": "number" 
                    },
                    "section": {
                        "type": "string"
                    },
                    "expirationData": {
                        "type": "string"
                    }
                }
            },
            "updateProduct":{
