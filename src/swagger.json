                    },
                    "weight": {
                        "type": "number"
                    },
                    "calories": {
                        "type": "number" 
                    },
                    "section": {
                        "type": "string"
                    },
                    "expirationData": {
                        "type": "string"
                    }
                }
            },
            "readAllProduct": {
                "type": "array",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
